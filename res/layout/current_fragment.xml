<?xml version="1.0" encoding="UTF-8"?>
<!-- фрагмент с выводом информации о персонаже -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background = "@color/mainBackground">
        
   <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">
            
        <ImageView
            android:id = "@+id/avatarImage"
            android:layout_width = "@dimen/_120sdp"
            android:layout_height = "@dimen/_120sdp"
            android:layout_gravity = "center"
            android:src = "@drawable/noimage"
            android:background = "@null"/>
            
        <TextView
           android:layout_width = "match_parent"
           android:layout_height = "wrap_content"
           android:text = "@string/characterName"
           android:textSize = "@dimen/_18ssp"
           android:textColor = "@color/textColorDark"
           android:background = "@color/currentInfo" 
           android:padding = "@dimen/_5sdp"
           android:gravity = "center"
           android:layout_marginTop = "@dimen/_10sdp"/>
        
        <TextView
            android:id = "@+id/textName"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "no data"
            android:textColor = "@color/textColor"
            android:textSize = "@dimen/_18ssp"
            android:padding = "@dimen/_5sdp"
            android:layout_marginTop = "@dimen/_5sdp"
            android:layout_gravity = "center"/>
        
        <TextView
           android:layout_width = "match_parent"
           android:layout_height = "wrap_content"
           android:text = "@string/characterSpecies"
           android:textSize = "@dimen/_18ssp"
           android:textColor = "@color/textColorDark"
           android:background = "@color/currentInfo" 
           android:padding = "@dimen/_5sdp"
           android:gravity = "center"
           android:layout_marginTop = "@dimen/_10sdp"/>
        
        <TextView
            android:id = "@+id/textSpecies"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "no data"
            android:textColor = "@color/textColor"
            android:textSize = "@dimen/_18ssp"
            android:padding = "@dimen/_5sdp"
            android:layout_marginTop = "@dimen/_5sdp"
            android:layout_gravity = "center"/>
        
        <TextView
           android:layout_width = "match_parent"
           android:layout_height = "wrap_content"
           android:text = "@string/characterGender"
           android:textSize = "@dimen/_18ssp"
           android:textColor = "@color/textColorDark"
           android:background = "@color/currentInfo" 
           android:padding = "@dimen/_5sdp"
           android:gravity = "center"
           android:layout_marginTop = "@dimen/_10sdp"/>
        
        <TextView
            android:id = "@+id/textGender"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "no data"
            android:textColor = "@color/textColor"
            android:textSize = "@dimen/_18ssp"
            android:padding = "@dimen/_5sdp"
            android:layout_marginTop = "@dimen/_5sdp"
            android:layout_gravity = "center"/>
            
   </LinearLayout>
        
</ScrollView>